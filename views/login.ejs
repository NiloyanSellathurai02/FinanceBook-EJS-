<!DOCTYPE html>
<html lang="en">
  <%- include("./head.ejs") %>
  <body>
    <div class="container-login">
      <div class="container-login-main">
        <div class="login-main-form">
          <div class="login--logo">
            <img src="../images/logo.png" class="login-logo" alt="" />
          </div>

          <div class="form-container">
            <form id="form-login">
              <label for="fname">Gebruikersnaam :</label><br />
              <input
                type="text"
                value=""
                id="loginUserName"
                class="loginName"
                required
              /><br />
              <label for="lname">Wachtwoord :</label><br />
              <input
                type="password"
                id="password"
                class="loginName"
              /><br /><br />
              <p class="ww-forget">
                <a href="signup">Wachtwoord aanmaken</a>
              </p>
              <input
                type="submit"
                value="Login"
                id="login-btn"
                class="login-btn"
              />
            </form>
          </div>
        </div>

        <!-- <div class="login-main-image">
